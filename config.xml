<?xml version='1.0' encoding='utf-8'?>
<widget id="io.voiceit.voiceitapi2cordovademo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VoiceIt API 2 Cordova Demo App</name>
    <description>
        A sample Apache Cordova application that shows the integration of cordova-plugin-voiceit-api-2
    </description>
    <author email="armaan@voiceit.io" href="http://voiceit.io">
        VoiceIt Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/img/Default@2x~universal~anyany.png" />
    </platform>
    <plugin name="cordova-plugin-launchscreen-storyboard" spec="^2.0.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.2.2" />
    <plugin name="cordova-plugin-voiceit-api-2" spec="0.0.58">
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="This app needs to access to your microphone for voice biometrics" />
        <variable name="CAMERA_USAGE_DESCRIPTION" value="This app needs to access to your camera for face biometrics" />
    </plugin>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
</widget>
